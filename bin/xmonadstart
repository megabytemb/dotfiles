#!/bin/bash
DAEMONS="xfce4-volumed xfce4-power-manager nm-applet trayer thunar nm-applet dropbox syndaemon update-notifier bluetooth-applet ssh-aagent xscreensaver"
for daemon in $DAEMONS; do killall $daemon; done

trayer --edge top --align left --margin 1160 --width 120 --widthtype pixel --height 12 --padding 1 --tint 0x000000 --transparent true &
sleep 1
nm-applet &
#nm-applet --sm-disable &
xfce4-power-manager &
xfce4-volumed &
(
    eval $(gnome-keyring-daemon --start)
    export GNOME_KEYRING_SOCKET
    export GNOME_KEYRING_PID
    export SSH_AUTH_SOCK="$GNOME_KEYRING_CONTROL/ssh"
)

thunar --daemon &
dropbox start -i
syndaemon -d -t &
bluetooth-applet &
xdg-user-dirs-gtk-update &
update-notifier --startup-delay=60 &
ssh-agent &
#xscreensaver -no-splash &

(sleep 15; evolution &)
google-chrome &
vmware &
